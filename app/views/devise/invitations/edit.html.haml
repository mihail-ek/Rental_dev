.container
  %h2 Sign up 
  = link_to "Sign up with Facebook", omniauth_authorize_path(resource_name, :facebook)
  %hr
  = simple_form_for resource, :as => resource_name, :url => invitation_path(resource_name), :multipart => true, :html => { :method => :put } do |f|
    = devise_error_messages!
    = f.hidden_field :invitation_token, value: session[:invitation_token] 
    = f.input :name, :autofocus => true
    = f.input :avatar
    = f.input :password
    = f.input :password_confirmation
    = f.submit "Sign up"
